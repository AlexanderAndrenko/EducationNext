<Window x:Class="EducationNext.Pages.SyllabusEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EducationNext.Pages"
        mc:Ignorable="d"
        Title="Редактирование/Создание учебного плана" Height="850" Width="1300">
    <Grid>
        <DockPanel
            Margin="20"
            LastChildFill="True">
            <StackPanel
                Orientation="Horizontal"
                DockPanel.Dock="Top">
                <TextBlock>Наименование учебного плана</TextBlock>
                <TextBox
                        Margin="20,0,0,0"
                        Width="300"
                        Text="{Binding SelectedItem.Name}"></TextBox>
                <TextBlock 
                        Width="200" 
                        TextAlignment="Center"
                        Margin="20,0,0,0">
                        Образовательная программа
                </TextBlock>
                <ComboBox 
                            Margin="20,0,0,0" 
                            Width="230"                            
                            SelectedItem="{Binding SelectedItem.EducationalProgramID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"                            
                            ItemsSource="{Binding  ComboBoxEducationalProgram}"  
                            SelectedValuePath="Id"
                            DisplayMemberPath="Name">
                </ComboBox>
                <Button 
                    Margin="25,0,0,0"
                    Width="170"
                    Content="Выбрать элементы"
                    Command="{Binding EditSyllabusElement}"/>
            </StackPanel>
            
            <StackPanel
                DockPanel.Dock="Right"
                Width="235"
                Margin="0,10,0,0"
                Background="Green">
                <StackPanel
                    Orientation="Vertical">
                    <TextBlock/>
                    <ListView
                        AllowDrop="True"
                        ItemsSource="{Binding ElementsWithoutSemester}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel
                                    Width="200"
                                    Height="100"
                                    Margin="10"
                                    Background="White">
                                    <TextBlock
                                        Text="{Binding Place}"/>
                                    <TextBlock 
                                        Text="{Binding Name}"
                                        TextWrapping="Wrap"/>
                                    <TextBlock
                                        Text="{Binding FormIntermediateCertification}"/>
                                    <TextBlock
                                        Text="{Binding CourseWork}"/>
                                    <TextBlock
                                        Text="{Binding QuantityCreditUnit}"/>
                                    <TextBlock
                                        Text="{Binding QuantityAcademicHour}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </StackPanel>
            <StackPanel
                DockPanel.Dock="Left"
                Orientation="Horizontal"
                Margin="0,10,0,0"
                Background="Azure"
                Width="Auto">
                <ItemsControl
                    ItemsSource="{Binding Semesters}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                                Orientation="Vertical">
                                <TextBlock/>
                                <ListView
                                    AllowDrop="True"
                                    ItemsSource="{Binding Elements}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel
                                                Width="200"
                                                Height="200"
                                                Margin="10"
                                                Background="White">
                                                <TextBlock 
                                                    Text="{Binding Elements.Name}"/>
                                                
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
