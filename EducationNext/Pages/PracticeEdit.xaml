<Window x:Class="EducationNext.Pages.PracticeEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EducationNext.Pages"
        mc:Ignorable="d"
        Title="Редактирование/Создание практики" Height="350" Width="600">
    <Grid
        Margin="15">
        <StackPanel
            Orientation="Vertical">
            <StackPanel
                Orientation="Horizontal">
                <StackPanel
                    Orientation="Vertical"
                    Margin="0,0,20,0">
                    <StackPanel 
                        Orientation="Horizontal"
                        Margin="0,20,0,0">
                        <TextBlock Width="170" TextAlignment="Center">Название практики</TextBlock>
                        <TextBox Margin="20,0,0,0" Height="20" Width="170" Text="{Binding SelectedItem.Name}"/>
                    </StackPanel>
                    <StackPanel 
                        Orientation="Horizontal"
                        Margin="0,20,0,0">
                        <TextBlock Width="170" TextAlignment="Center">Вид практики</TextBlock>
                        <ComboBox 
                            Margin="20,0,0,0" 
                            Width="170" 
                            Text="{Binding MainTypeNewPractice}">
                            <TextBlock>Учебная</TextBlock>
                            <TextBlock>Производственная</TextBlock>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel 
                        Orientation="Horizontal"
                        Margin="0,20,0,0">
                        <TextBlock Width="170" TextAlignment="Center">Тип практики</TextBlock>
                        <ComboBox 
                            Margin="20,0,0,0" 
                            Width="170" 
                            SelectedItem="{Binding SelectedItem.Type}" 
                            ItemsSource="{Binding ComboBoxList}">
                        </ComboBox>
                    </StackPanel>
                    <StackPanel 
                        Orientation="Horizontal"
                        Margin="0,20,0,0">
                        <TextBlock Width="170" TextAlignment="Center">Количество зачетных единиц</TextBlock>
                        <TextBox Margin="20,0,0,0" Height="20" Width="170" Text="{Binding SelectedItem.QuantityCreditUnit}"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel>
                    <TextBlock Width="170" TextAlignment="Center">Выберите компетенции<LineBreak/> в практике</TextBlock>
                    <ListBox
                        ItemsSource="{Binding ListCompetenceListItem}"
                        Height="200"
                        Width="170">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox
                                    IsChecked="{Binding IsChecked}"
                                    Content="{Binding Name}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </StackPanel>
            <Button Width="100" Height="25" Content="Сохранить" Margin="0,20,0,0" Command="{Binding SavePractice}"/>
        </StackPanel>
    </Grid>
</Window>
